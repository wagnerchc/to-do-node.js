<div class="row justify-content-center my-5">
    <div class="col-10 col-md-8 bg-dark bg-gradient shadow rounded">
        <h1 class="text-center text-white py-2">Tarefas</h1>
    </div>
</div>
<div class="row justify-content-center align-items-center">
    <div class="col-10 col-md-8 bg-light bg-gradient shadow rounded p-5">
        <ul>
            {{#each tasks}}
            <div class="row justify-content-center align-items-center fs-5">
                <div class="col-12 col-md-9">
                    {{#if this.done}}
                        <a href="/" class="text-decoration-none text-success">{{this.title}}</a>
                    {{else}}
                        <a href="/" class="text-decoration-none text-danger">{{this.title}}</a>
                    {{/if}}
                </div>
                <div class="col-12 col-md-3 text-center">
                    <div class="row justify-content-center align-items-center fs-4">
                        <div class="col-4">
                            <form action="/tasks/updatestatus" method="post">
                                <input type="hidden" name="id" value="{{this.id}}">
                                <input type="hidden" name="done" value="{{this.done}}">
                                <button type="submit" class="btn fs-4">
                                    {{#if this.done}}
                                        <i class="bi bi bi-check2 text-success"></i>
                                    {{else}}
                                        <i class="bi bi bi-check2 text-danger"></i>
                                    {{/if}}
                                </button>
                            </form>
                        </div>
                        <div class="col-4">
                            <a href="/tasks/edit/{{this.id}}" class="text-decoration-none text-dark">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                        </div>
                        <div class="col-4">
                            <form action="/tasks/remove" method="post">
                                <input type="hidden" name="id" value="{{this.id}}">
                                <button type="submit" class="btn fs-4">
                                    <i class="bi bi-x-lg"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </ul>
    </div>
</div>